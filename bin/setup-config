#!/bin/bash
WWW_DIR=/srv/www

if [ -d $WWW_DIR/bin ] && [ ! -f $WWW_DIR/bin/magento-php ]; then
  mv $WWW_DIR/bin/magento $WWW_DIR/bin/magento-php
  cp /usr/local/bin/magento $WWW_DIR/bin/
fi

echo "*/1 * * * * su -c \"/usr/local/bin/php $WWW_DIR/update/cron.php\" -s /bin/sh www-data" | crontab - \
  && (crontab -l ; echo "*/1 * * * * su -c \"/usr/local/bin/php $WWW_DIR/bin/magento-php cron:run\" -s /bin/sh www-data") | crontab - \
  && (crontab -l ; echo "*/1 * * * * su -c \"/usr/local/bin/php $WWW_DIR/bin/magento-php setup:cron:run\" -s /bin/sh www-data") | crontab -

# Start the cron service
/usr/sbin/cron
